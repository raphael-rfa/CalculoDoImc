<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Calculo Do IMC</title>
    <link rel="icon" type="image/x-icon" href="./imagens/icon.svg" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="robots" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1" />
    <meta name="description" content="Calculadora do IMC (Indice de Massa Corporea) indice adotado pela OMS (Organização Mundial da Saude) para definir o peso ideal de cada pessoa." />
    <link rel="canonical" href="https://calculodoimc.azurewebsites.net/">
    <meta name="author" content="Raphael Francisco" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Calculadora de IMC" />
    <meta property="og:description" content="Calculadora do IMC (Indice de Massa Corporea) indice adotado pela OMS (Organização Mundial da Saude) para definir o peso ideal de cada pessoa."/>
    <meta property="og:url" content="https://calculodoimc.azurewebsites.net/" />
    <meta property="og:site_name" content="Calculadora de IMC" />
    <meta property="og:image" content="https://calculodoimc.azurewebsites.net/imagens/icon.svg" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />    
</head>
<body>
    <header>       
        <nav>
            <div class="logo">
                <img src="./imagens/Logo (1).svg"/>
            </div>
            <ul class="navbar-nav flex-grow-1">
                <li>
                    <a href="#"><b>Home</b></a>
                </li>
                <li>
                    <a href="#">Calculadora IMC</a>
                </li>
            </ul>
        </nav>
    </header>
    <div class="main">
        @RenderBody()
    </div>
    <footer>
        <p>Feito por Raphael Francisco</p>
        <br>
        <a href="https://github.com/raphael-rfa" target="_blank">
            <img src="./imagens/GitHub-Mark-120px-plus.png" alt="" width="38" height="38"/>
        </a>
        <a href="https://www.linkedin.com/in/raphael-rfa/" target="_blank">
            <img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/linkedin/linkedin-original.svg" 
            width="38" height="38"/>
        </a>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>